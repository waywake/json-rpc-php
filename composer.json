{
    "name": "paidian/json-rpc",
    "type": "library",
    "description": "json rpc server/client.",
    "require": {
        "php": "^8.3",
        "guzzlehttp/guzzle": "^7.8|^8.0",
        "illuminate/support": "^11.0",
        "illuminate/http": "^11.0",
        "monolog/monolog": "^3.5",
        "itxq/api-doc-php": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "JsonRpc\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "laravel/lumen-framework": "^11.0"
    },
    "suggest": {
        "influxdb/influxdb-php": "For RPC monitoring (deprecated, optional)"
    },
    "repositories": {
        "rpc-doc-php": {
            "type": "git",
            "url": "git@github.com:waywake/rpc-doc-php.git"
        }
    }
}
